<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:id="@+id/nav_header_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/fbImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/user" />

        <com.prolificwebworks.theclubix.utils.CustomFont
            android:id="@+id/fbName"
            android:layout_width="wrap_content"
            android:text="Sample Name"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorAccent2"
            android:layout_height="wrap_content"
            android:textSize="21sp"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_header_container" />

    <ImageView
        android:id="@+id/clogo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/drawerList" />
    <ImageView
        android:id="@+id/clubixLogo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:src="@drawable/clubix"
        android:layout_below="@id/clogo" />

</RelativeLayout>