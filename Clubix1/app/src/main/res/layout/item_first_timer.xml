<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <com.prolificwebworks.theclubix.utils.CustomFont
        android:id="@+id/firstTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_corner"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="skip"
        android:textColor="@color/colorAccent2"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/firstTimeChecker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/firstTimeText"
        android:layout_alignEnd="@+id/firstTimeText"
        android:layout_alignRight="@+id/firstTimeText"
        android:layout_alignTop="@+id/firstTimeText" />

</RelativeLayout>
